    <akshara regex='_vowel__dot_?|_cons_(_nukta_)?(_halanth_(_zwj_|_zwnj_)?_cons_(_nukta_)?){0,3}(_mathra_(_dot_)?|_halanth_(_zwj_|_zwnj_)?$)?|_digit_'/>
    <simple-akshara regex='^_vowel__dot_?$|^_cons_(_nukta_)?((_dot_)|(_mathra_)|(_halanth_(_zwj_|_zwnj_)?))?$'/>
    
    <render-rules>    
        <rule prop = 'digit'>
            <producer regex='(_digit_)' replace='\1'/>
        </rule>    

        <rule prop = 'vowel'>
            <producer regex='(_vowel_)' replace='\1'/>
        </rule>
        <rule prop = 'mathra'>
            <producer regex='(_mathra_)' replace='\1'/>
        </rule>
        <rule prop = 'halanth'>
            <producer regex='(_halanth_)' replace='\1'/>
        </rule>
        <rule prop = 'nukta'>
            <producer regex='(_nukta_)' replace=''/>
        </rule>    
        <rule prop = 'dot'>
            <producer regex='(_dot_)' replace='\1'/>
        </rule>
        <rule prop = 'zwm'>
            <!-- These must be followed by halanth.. else have no meaning. So force halanth even if user skips it-->
            <producer regex='(?&lt;=_halanth_)(_zwm_)' replace='\1'/>
            <producer regex='(_zwm_)' replace='_.h_\1'/>
        </rule>
        <rule prop = 'delim'>
            <producer regex='(?&lt;=_vowel_)(_delim_)' replace=''/>
            <producer regex='(?&lt;=_mathra_)(_delim_)' replace=''/>
            <producer regex='(_delim_)' replace='\1'/>
        </rule>        
        <!--rule prop = 'OM'>
            <producer regex='(_OM_)' replace='\1'/>
        </rule-->                    
        <rule prop = 'cons'>
            <producer regex='(?&lt;=_cons_)(_cons__nukta_?)' replace='_.h_\1'/>
            <producer regex='(?&lt;=_cons__nukta_)(_cons__nukta_?)' replace='_.h_\1'/>            
            <producer regex='(_cons__nukta_?)' replace='\1'/>
        </rule>
    </render-rules>
    
    <utolit-rules>
