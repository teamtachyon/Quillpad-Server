        </rule>    
        <rule prop = 'vowel'>
            <producer regex='(?&lt;=_cons__nukta_)(_vowel_)' replace='_/_\1'/>
            <producer regex='(?&lt;=_cons_)(_vowel_)' replace='_/_\1'/>
            <producer regex='(?&lt;=_vowel_)(_vowel_)' replace='_/_\1'/>
            <producer regex='(?&lt;=_mathra_)(_vowel_)' replace='_/_\1'/>
            <producer regex='(_vowel_)' replace='\1'/>
        </rule>
        <rule prop = 'mathra'>
            <producer regex='(_mathra_)' replace='\1'/>
        </rule>
        <rule prop = 'halanth'>
            <producer regex='(_.h_)(?!_cons_)' replace="\1"/>
            <!--producer regex='(_.h_)(?=_h_)' replace="\1"/-->
            <producer regex='(_.h_)' replace=""/>
        </rule>
        <rule prop = 'nukta'>
            <producer regex='(_nukta_)' replace='\1'/>
        </rule>
        <rule prop = 'dot'>
            <producer regex='(_dot_)' replace='\1'/>
        </rule>            
        <rule prop = 'zwm'>
            <producer regex='(_zwm_)' replace='\1'/>
        </rule>                    
        <rule prop = '/'>
            <producer regex='(_/_)' replace='\1'/>
        </rule>                    
        <rule prop = 'cons'>
            <producer regex='(_cons_)(?=_cons_|_dot_|_vowel_)' replace="\1_a0_"/>
            <producer regex='^(_cons_)$' replace="\1_a0_"/>
            <producer regex='(_cons_)' replace="\1"/>
        </rule>
    </utolit-rules>
